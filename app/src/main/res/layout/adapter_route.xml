<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/route_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/from_route_card_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/from_route_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="doftdare"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/app_color_white"
                android:textAlignment="center"
                android:background="@color/app_color_normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true">
            </TextView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_commit"
                android:background="@android:color/transparent"
                tools:ignore="NestedWeights"
                android:contentDescription="@string/route_image_name">
            </ImageView>

            <TextView
                android:id="@+id/distance_for_route_text_view"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/app_color_normal"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true">
            </TextView>

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_right_alt"
                android:background="@android:color/transparent"
                android:contentDescription="@string/route_image_name">
            </ImageView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/to__route_card_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/to_route_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="doftdare"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/app_color_white"
                android:textAlignment="center"
                android:background="@color/app_color_normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_route_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/update_route_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Update"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/text_color_light"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:backgroundTint="#008000"
            android:layout_marginEnd="2dp"
            style="?android:attr/buttonBarButtonStyle">
        </Button>

        <Button
            android:id="@+id/delete_route_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Delete"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/text_color_light"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:backgroundTint="#FF0000"
            android:layout_marginStart="2dp"
            style="?android:attr/buttonBarButtonStyle">
        </Button>
    </LinearLayout>
</LinearLayout>