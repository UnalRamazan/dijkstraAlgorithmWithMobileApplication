<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2dp">

    <TextView
        android:layout_weight="1"
        android:id="@+id/from_point_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doftdare"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true">
    </TextView>

    <LinearLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_commit"
            android:background="@android:color/transparent"
            tools:ignore="NestedWeights"
            android:contentDescription="@string/route_image_name">
        </ImageView>

        <TextView
            android:id="@+id/distance_text_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_dark"
            android:textAlignment="center"
            android:layout_gravity="center">
        </TextView>

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_right_alt"
            android:background="@android:color/transparent"
            android:contentDescription="@string/route_image_name">
        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/to_point_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doftdare"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true">
    </TextView>
</LinearLayout>